@using DotnetFlix.Objects.TvShows
@model cloudscribe.Pagination.Models.PagedResult<TvShow>
@{
    ViewData["Title"] = "FilterTvShows";
    ViewData["Controller"] = "TvShow";
    ViewData["Action"] = "FilterTvShows";
    <link href="~/netflix/css/hoverNetflix.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/css/searchmovie.css" />*@
    <link href="~/netflix/css/netflixPagination.css" rel="stylesheet" />
    @*<link href="~/netflix/css/flickity.css" rel="stylesheet" />
        <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>*@
}


